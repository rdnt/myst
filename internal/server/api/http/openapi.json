  "servers": [
    {
      "url": "http://localhost:8080/api",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/keystore/{keystoreId}/invitations": {
      "post": {
        "description": "Creates an invitation from a user (inviter) to another user (invitee), which, once accepted, will grant the invitee read/write access to the keystore",
        "operationId": "CreateKeystoreInvitation",
        "requestBody": {
          "description": "Invitation parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateKeystoreInvitationRequest"
              }
            }
          }
        },
        "parameters": [
          {
            "name": "keystoreId",
            "in": "path",
            "description": "unique identifier for a keystore",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Invitation response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Invitation"
                  }
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateKeystoreInvitationRequest": {
        "type": "object",
        "required": [
          "inviteeId",
          "publicKey"
        ],
        "properties": {
          "inviteeId": {
            "type": "string"
          },
          "publicKey": {
            "type": "string"
          }
        }
      },
      "Invitation": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
